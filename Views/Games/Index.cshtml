@model IEnumerable<WarApp.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.user_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numMoves)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.timesWar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gameOver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.savedGame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.saveState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numMoves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timesWar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gameOver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.savedGame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saveState)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
