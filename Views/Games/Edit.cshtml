@model WarApp.Models.Game

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="user_id" class="control-label"></label>
                <input asp-for="user_id" class="form-control" />
                <span asp-validation-for="user_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numMoves" class="control-label"></label>
                <input asp-for="numMoves" class="form-control" />
                <span asp-validation-for="numMoves" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timesWar" class="control-label"></label>
                <input asp-for="timesWar" class="form-control" />
                <span asp-validation-for="timesWar" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="gameOver" /> @Html.DisplayNameFor(model => model.gameOver)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="savedGame" /> @Html.DisplayNameFor(model => model.savedGame)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="saveState" class="control-label"></label>
                <input asp-for="saveState" class="form-control" />
                <span asp-validation-for="saveState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

