@model IEnumerable<WarApp.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesLost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalMoves)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.timesWar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gamesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gamesWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gamesLost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalMoves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timesWar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
