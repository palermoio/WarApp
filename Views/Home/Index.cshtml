@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid text-center">
    <div class="row title-row">
        <div class="col">
            <h1 class="display-4">The Rules of War</h1>
        </div>
    </div>

    <div class="row rules-war">
        <div class="col">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">The deck is shuffled and distributed evenly between players.</li>
                <li class="list-group-item">Each player places the card from the top of their deck face up. The player with the higher rank takes both cards.</li>
                <li class="list-group-item">In case of a draw, war is declared, and one additional card is placed down. Then, another card is placed down, and the player with the highest rank takes all cards.</li>
                <li class="list-group-item">Repeat until one player has all fifty two cards.</li>
            </ul>
        </div>
    </div>

    <div class="row button-dash">
        <div class="col">
            <a asp-area="" asp-controller="Dashboard" asp-action="Index" asp-route-user_id="3" class="btn btn-success btn-dash">Go to the Dashboard</a>
        </div>
    </div>

</div>

@section Scripts
{
    <link rel="stylesheet" href="~/css/home.css" />
}
